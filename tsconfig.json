{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "composite": true,
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@libs/*": ["./libraries/*"]
    },
    "rootDirs": [
      ".",
      "./libraries/a",
      "./libraries/b",

      "./bazel-out/k8-fastbuild/bin/libraries/a",
      "./bazel-out/k8-fastbuild/bin/libraries/b"
    ]
  }
}
