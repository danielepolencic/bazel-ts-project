{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "composite": true,
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@libs/*": ["./libraries/*"]
    },
    "rootDirs": [
      ".",

      "./app",
      "./bazel-out/host/bin/app",
      "./bazel-out/darwin-fastbuild/bin/app",
      "./bazel-out/k8-fastbuild/bin/app",
      "./bazel-out/x64_windows-fastbuild/bin/app",
      "./bazel-out/darwin-dbg/bin/app",
      "./bazel-out/k8-dbg/bin/app",
      "./bazel-out/x64_windows-dbg/bin/app",

      "./libraries",
      "./bazel-out/host/bin/libraries",
      "./bazel-out/darwin-fastbuild/bin/libraries",
      "./bazel-out/k8-fastbuild/bin/libraries",
      "./bazel-out/x64_windows-fastbuild/bin/libraries",
      "./bazel-out/darwin-dbg/bin/libraries",
      "./bazel-out/k8-dbg/bin/libraries",
      "./bazel-out/x64_windows-dbg/bin/libraries"
    ]
  }
}
